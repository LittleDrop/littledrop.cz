{
	"type": "module",
	"dependencies": {
		"normalize.css": "^8.0.1"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^6.0.0",
		"@types/node": "^25.0.3",
		"less": "^4.5.1",
		"prettier": "^3.8.1",
		"prettier-plugin-organize-imports": "^4.3.0",
		"typescript": "^5.9.3",
		"vite": "^7.3.0",
		"vite-hugo-plugin": "^5.1.0",
		"vite-plugin-minify": "^2.1.0"
	},
	"scripts": {
		"build": "npm run build:dev",
		"build:dev": "npm run build:hugo && npm run build:vite && npm run build:cleanup",
		"build:hugo": "(rm -rf public 2>/dev/null || true) && hugo -d public",
		"build:vite": "vite build",
		"build:cleanup": "rm -rf public/css public/js public/img 2>/dev/null || true",
		"vite:preview": "npm run build && vite preview"
	}
}
