root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,html,ts,cjs,js,less,json,sh}]
indent_style = tab
indent_size = tab
tab_width = 4

[*.{toml,yml,yaml}]
indent_size = 4
indent_style = space

[{Caddyfile,Dockerfile,Makefile}]
indent_size = 4
indent_style = tab
